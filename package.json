{
  "name": "data-use-facility-tool",
  "author": "UCSF, IGHS | Global Programs <communications@globalhealth.ucsf.edu>",
  "type": "module",
  "version": "1.2.0",
  "main": "electron/electron.cjs",
  "description": "Platform for Facility Data Use",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/NgibuiniGikandi/duft-ui-personal.git"
  },
  "scripts": {
    "build": "yarn typecheck && vite build",
    "postbuild": "rm -rf ../duft-server/static/frontend && mkdir -p ../duft-server/static/frontend && cp -R ./dist/* ../duft-server/static/frontend",
    "dev": "vite --host",
    "test": "vitest",
    "format": "prettier --check --ignore-path .gitignore --write .",
    "lint": "eslint --ignore-path .gitignore .",
    "preview": "vite preview --host",
    "typecheck": "tsc",
    "electron": "wait-on tcp:3031 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "build-and-package": "node scripts/js/build_and_package.js"
  },
  "engines": {
    "node": ">= 16",
    "npm": ">= 8",
    "yarn": ">= 1"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@mantine/core": "6.0.21",
    "@mantine/dates": "6.0.21",
    "@mantine/hooks": "6.0.21",
    "@tabler/icons-react": "^3.12.0",
    "@tailwindcss/typography": "^0.5.15",
    "@tanstack/react-query": "^5.56.2",
    "@tanstack/react-query-devtools": "^5.56.2",
    "adm-zip": "^0.5.15",
    "apexcharts": "^3.41.0",
    "apextree": "1.1.0",
    "classnames": "^2.3.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "electron": "^30.0.7",
    "electron-log": "^5.1.5",
    "extract-zip": "2.0.1",
    "flowbite": "^1.8.0",
    "flowbite-react": "^0.10.2",
    "mantine-react-table": "^1.3.4",
    "path": "^0.12.7",
    "react-apexcharts": "^1.4.1",
    "react-error-boundary": "^4.0.13",
    "react-html-parser": "^2.0.2",
    "react-icons": "^4.10.1",
    "react-jsx-parser": "^2.0.0",
    "react-loading-skeleton": "^3.5.0",
    "react-markdown": "^9.0.1",
    "react-pivottable": "^0.11.0",
    "react-rnd": "^10.4.13",
    "react-sortablejs": "^6.1.4",
    "remark-gfm": "^4.0.0",
    "sortablejs": "^1.15.0",
    "svgmap": "^2.10.1",
    "tar": "^7.4.3",
    "util": "^0.12.5",
    "util.promisify": "^1.1.2",
    "vite": "^4.4.7",
    "vite-plugin-components": "^0.13.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@types/react-pivottable": "^0.11.6",
    "@types/sortablejs": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "cz-conventional-changelog": "^3.3.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.14.2",
    "react-router-dom": "^6.14.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vitest": "^2.1.2"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:tailwindcss/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": "off",
      "tailwindcss/classnames-order": [
        "error",
        {
          "callees": [
            "classnames"
          ],
          "config": "tailwind.config.cjs"
        }
      ],
      "tailwindcss/no-custom-classname": [
        "error",
        {
          "config": "tailwind.config.cjs"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "build": {
    "appId": "com.ucsf.ighs.ucgprograms",
    "productName": "DUFT",
    "compression": "maximum",
    "directories": {
      "buildResources": ".",
      "output": "release"
    },
    "files": [
      "public/setup.html",
      "electron/electron.cjs",
      "package.json",
      "duft_icon.ico",
      "duft_icon.icns"
    ],
    "extraResources": [
      {
        "from": "duft_resources.zip",
        "to": "duft_resources.zip"
      }
    ],
    "mac": {
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "./duft_icon.icns",
      "artifactName": "${productName}-${version}-${arch}-${implementationCode}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ],
      "icon": "./duft_icon.ico",
      "artifactName": "${productName}-${version}-${arch}-${implementationCode}.${ext}"
    },
    "linux": {
      "icon": "./duft_icon.png",
      "category": "Science",
      "target": [
        "deb",
        "rpm"
      ],
      "icon": "./duft_icon.png",
      "artifactName": "${productName}-${version}-${arch}-${implementationCode}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DUFT Platform",
      "upgradeCode": "e84c054a-7d0e-4ba4-bfb3-cdf339c6a7e3"
    }
  }
}
